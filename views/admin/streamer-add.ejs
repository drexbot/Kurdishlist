<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

<body>
  <%- include('../partials/spinner') %>
  <main class="page-wrapper">
    <%- include('../partials/header') %>

    <section class="position-relative pt-5">
      <div class="container position-relative zindex-2 pt-5 pb-lg-5">
        <div class="row">
          <div class="col-lg-8 offset-lg-2">
            <h1 class="mb-4">Add New Partner</h1>
            <div class="card border-0 shadow-sm p-4 p-lg-5">
              <% if(req.query.error) { %>
              <div class="alert alert-danger">
                <%= req.query.message %>
              </div>
              <% } %>
              <% if(req.query.success) { %>
              <div class="alert alert-success">
                <%= req.query.message %>
              </div>
              <% } %>

              <form action="/admin/streamer" method="POST">
                <div class="mb-4">
                  <label for="icon" class="form-label">Icon URL</label>
                  <input type="text" class="form-control" id="icon" name="icon" placeholder="https://example.com/icon.png" required>
                </div>

                <div class="mb-4">
                  <label for="serverName" class="form-label h5 text-primary">Server Name</label>
                  <input type="text" class="form-control form-control-lg" id="serverName" name="serverName" placeholder="Server Name" required>
                  <small class="text-muted">Enter the name of the partner server/organization</small>
                </div>

                <input type="hidden" id="ownerID" name="ownerID" value="<%= user.id %>">


                <div class="mb-4">
                  <label for="Website" class="form-label">Website URL</label>
                  <input type="text" class="form-control" id="Website" name="Website" placeholder="https://example.com" required>
                </div>

                <div class="mb-4">
                  <label for="partnerDesc" class="form-label">Description</label>
                  <textarea class="form-control" id="partnerDesc" name="partnerDesc" rows="4" placeholder="Partner description" required></textarea>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                  <a href="/admin/streamer" class="btn btn-secondary">Cancel</a>
                  <button type="submit" class="btn btn-primary">Add Partner</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <%- include('../partials/footer') %>
  </main>
</body>
</html>